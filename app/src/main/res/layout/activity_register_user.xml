<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:text="Punkti bērniem"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bannerDescription"
        android:text="Lietotne bērnu finansiālo mērķu sasniegšanai"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/banner"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        android:layout_below="@id/bannerDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:inputType="text"
        android:textSize="24dp"
        android:hint="Pilns vārds"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_below="@id/fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="number"
        android:textSize="24dp"
        android:hint="Vecums"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="textEmailAddress"
        android:textSize="24dp"
        android:hint="E-pasta adrese"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:hint="Parole"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/login"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_700"
        android:text="Reģistrēties"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:textSize="26dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        style="?android:progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"/>

</RelativeLayout>