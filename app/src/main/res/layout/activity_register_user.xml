<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:text="Punkti bērniem"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bannerDescription"
        android:text="Lietotne bērnu finansiālo mērķu sasniegšanai"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/banner"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        android:layout_below="@id/bannerDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:textSize="24dp"
        android:hint="Pilns vārds"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="textEmailAddress"
        android:textSize="24dp"
        android:hint="E-pasta adrese"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:hint="Parole"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPassword"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:hint="Parole atkārtoti"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginTop="24dp"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vecāks"
            android:padding="10dp"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bērns"
            android:padding="10dp"
            android:textSize="20sp"/>

    </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/registerUser"
        android:layout_below="@id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_700"
        android:text="Reģistrēties"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:textSize="26dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        style="?android:progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        android:progressTint="@color/black"/>

</RelativeLayout>